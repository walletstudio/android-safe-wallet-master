<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/bg_list"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/expired_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/font_size_small"
            android:textColor="@color/fg_less_significant"/>
    <TextView
            android:id="@+id/asset_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/font_size_small"
            android:textColor="@color/fg_less_significant"/>

    <de.schildbach.wallet.ui.CurrencyTextView
            android:id="@+id/candy_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/font_size_small"
            android:textColor="@color/fg_less_significant"/>

    <LinearLayout
            android:id="@+id/receive_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.8">

        <TextView
                android:id="@+id/receive"
                style="@style/My.Primary.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/safe_receive_label"/>

    </LinearLayout>


</LinearLayout>